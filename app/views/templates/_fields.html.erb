<div class="box-body">

  <div class="form-group col-xs-12">
    <%= f.label :code, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :code, class:"form-control", disabled: fields_disabled %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :mail, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :mail, class:"form-control", disabled: fields_disabled %>
    </div>
  </div>

</div>

<div class="box-footer">
  <%= f.submit 'Submit', :class => 'btn btn-success pull-right' if !fields_disabled %>
</div>
